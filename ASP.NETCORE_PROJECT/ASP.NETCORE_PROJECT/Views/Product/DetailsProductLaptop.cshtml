@model ASP.NETCORE_PROJECT.Models.Product

@{
    ViewBag.Title = "Admin | Detail laptop product page";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<!-- Main -->
<div class="app-main__inner">
    <div class="app-page-title">
        <div class="page-title-wrapper">
            <div class="page-title-heading">
                <div class="page-title-icon">
                    <i class="pe-7s-ticket icon-gradient bg-mean-fruit"></i>
                </div>
                <div>
                    Product
                    <div class="page-title-subheading">
                        View, create, update, delete and manage.
                    </div>
                </div>
            </div>

            <div class="page-title-actions">
                <a class="btn-shadow btn-hover-shine mr-3 btn btn-primary" asp-area="" asp-controller="Product" asp-action="CreateProductLaptop">
                    <span class="btn-icon-wrapper pr-2 opacity-7">
                        <i class="fa fa-plus fa-w-20"></i>
                    </span>
                    Create
                </a>
            </div>
        </div>
    </div>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    <div class="row">
        <div class="col-md-12">
            <div class="main-card mb-3 card">

                <div class="card-header">

                    <form>
                        <div class="input-group">
                            <input type="search" name="search" id="search"
                                   placeholder="Search everything" class="form-control">
                            <span class="input-group-append">
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-search"></i>&nbsp;
                                    Search
                                </button>
                            </span>
                        </div>
                    </form>

                    <div class="btn-actions-pane-right">
                        <div role="group" class="btn-group-sm btn-group">
                            <button class="btn btn-focus">This week</button>
                            <button class="active btn btn-focus">Anytime</button>
                        </div>
                    </div>
                </div>
                <div style="text-align:center;font-size:18px">
                    <h4>@Html.DisplayFor(model => model.Name)</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Image
                        </dt>
                        <dd class="col-sm-10">
                            <img src="~/Admin/assets/images/product/@Model.Image" width="100px" height="100px" />
                        </dd>

                        <dt class="col-sm-2">
                            Category
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Category.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Brand
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Brand.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Type laptop
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TypeLaptop.Name)
                        </dd>
                        <dt class="col-sm-2">
                            Cpu
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Cpu)
                        </dd>
                        <dt class="col-sm-2">
                            Graphic card
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.GraphicCard)
                        </dd>
                        <dt class="col-sm-2">
                            Feature
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Feature)
                        </dd>
                        <dt class="col-sm-2">
                            Origin
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Origin)
                        </dd>                       
                        <dt class="col-sm-2">
                            Ram
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Ram)
                        </dd>
                        <dt class="col-sm-2">
                            Storage
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Storage)
                        </dd>
                        <dt class="col-sm-2">
                            Screen
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Screen)
                        </dd>
                        <dt class="col-sm-2">
                            Operating system
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.OperatingSystem)
                        </dd>
                        <dt class="col-sm-2">
                            Size, volume
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.SizeVolume)
                        </dd>
                        <dt class="col-sm-2">
                            Front camera
                        </dt>                       
                        <dt class="col-sm-2">
                            Battery
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Battery)
                        </dd>
                        <dt class="col-sm-2">
                            Description
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Description)
                        </dd>
                        <dt class="col-sm-2">
                            Quantity
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Quantity)
                        </dd>
                        <dt class="col-sm-2">
                            Year of manufacturer
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.YearOfManufacturer)
                        </dd>
                        <dt class="col-sm-2">
                            Price
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Price)
                        </dd>
                        <dt class="col-sm-2">
                            Color
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.Color)
                        </dd>
                    </dl>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
                    <a asp-action="Index">Back to List</a>
                </div>


            </div>
        </div>
    </div>
</div>
<!-- End Main -->
