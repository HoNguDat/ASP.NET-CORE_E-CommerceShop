@model IEnumerable<Category>
@foreach (var item in Model)
{
    <div class="col-lg-3 col-md-4 col-sm-6 pb-1">
        <a class="text-decoration-none" asp-action="ListProductsByCategory" asp-controller="Home" asp-route-id="@item.Id">
            <div class="cat-item d-flex align-items-center mb-4">
                <div class="overflow-hidden" style="width: 70px; height: 70px;">
                    <img class="img-fluid" src="~/Admin/assets/images/@item.Image" alt="">
                </div>
                <div class="flex-fill pl-3">
                    <h6>@item.Name</h6>
                </div>
            </div>
        </a>
    </div>
}
