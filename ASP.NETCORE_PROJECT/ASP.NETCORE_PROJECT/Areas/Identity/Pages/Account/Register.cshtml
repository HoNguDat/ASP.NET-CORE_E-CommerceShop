@page
@model RegisterModel
@{
   
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
    <div class="container">       
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <!-- Nested Row within Card Body -->
            <div class="col-lg-6 offset-lg-3">               
                <div class="p-5">                   
                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Create a new account</h1>
                        <div class="alert">@ViewBag.MessageRegister</div>
                    </div>
                    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">

                        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                         <label asp-for="Input.Email">Email</label>
                        <div class="form-floating mb-3">                                         
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />                           
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>
                         <label asp-for="Input.Password">Password</label>
                        <div class="form-floating mb-3">                          
                            <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Password" />                            
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                         <label asp-for="Input.ConfirmPassword">Confirm Password</label>
                        <div class="form-floating mb-3">                          
                            <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Confirm password" />                           
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                        <label asp-for="Input.FullName">Full name</label>
                        <div class="form-floating mb-3">                            
                            <input asp-for="Input.FullName" class="form-control" autocomplete="fullname" aria-required="true" placeholder="Full name" />                           
                            <span asp-validation-for="Input.FullName" class="text-danger"></span>
                        </div>
                        <label asp-for="Input.PhoneNumber">Phone number</label>
                        <div class="form-floating mb-3">
                            <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="phonenumber" aria-required="true" placeholder="Phone number" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>
                        <label asp-for="Input.Address">Address</label>
                        <div class="form-floating mb-3">                            
                            <input asp-for="Input.Address" class="form-control" autocomplete="address" aria-required="true" placeholder="Address" />                           
                            <span asp-validation-for="Input.Address" class="text-danger"></span>
                        </div>
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Register</button>
                    </form>

                    <hr>
                    <div class="text-center">
                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                    </div>
                    <div class="text-center">
                        <a class="small" href="login.html">Already have an account? Login!</a>
                    </div>
                </div>
                </div>
                  
                    
                       
                   
                </div>
           
        </div>

    </div>
   
